{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:20000",
    "CorsOptions": {
      "AllowedOrigins": ["*"],
      "AllowedMethods": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "PATCH",
        "OPTIONS",
        "HEAD"
      ],
      "AllowedHeaders": ["*"]
    }
  },

  "routes": [
    {
      "UpstreamPathTemplate": "/Auth/v{version}/{everything}",
      "DownstreamPathTemplate": "/v{version}/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "auth-api",
          "Port": 8080
        }
      ],
      "UpstreamHttpMethod": [
        "Get",
        "Post",
        "Put",
        "Delete",
        "Patch",
        "Options",
        "Head",
        "Trace"
      ],
      "AddHeadersToRequest": {
        "Authorization": "{RequestHeader:Authorization}",
        "X-Custom-Header": "{RequestHeader:X-Custom-Header}"
      },
      "RouteIsCaseSensitive": false,
      "RequestIdKey": "X-Request-Id"
    },
    {
      "UpstreamPathTemplate": "/Routes/v{version}/{everything}",
      "DownstreamPathTemplate": "/v{version}/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "router-api",
          "Port": 8080
        }
      ],
      "UpstreamHttpMethod": [
        "Get",
        "Post",
        "Put",
        "Delete",
        "Patch",
        "Options",
        "Head",
        "Trace"
      ],
      "AddHeadersToRequest": {
        "Authorization": "{RequestHeader:Authorization}",
        "X-Custom-Header": "{RequestHeader:X-Custom-Header}"
      },
      "RouteIsCaseSensitive": false,
      "RequestIdKey": "X-Request-Id"
    },
    {
      "UpstreamPathTemplate": "/Payments/v{version}/{everything}",
      "DownstreamPathTemplate": "/v{version}/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "van-api",
          "Port": 8080
        }
      ],
      "UpstreamHttpMethod": [
        "Get",
        "Post",
        "Put",
        "Delete",
        "Patch",
        "Options",
        "Head",
        "Trace"
      ],
      "AddHeadersToRequest": {
        "Authorization": "{RequestHeader:Authorization}",
        "X-Custom-Header": "{RequestHeader:X-Custom-Header}"
      },
      "RouteIsCaseSensitive": false,
      "RequestIdKey": "X-Request-Id"
    }
  ]
}
